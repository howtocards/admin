{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "jsx": "react",
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "isolatedModules": true
  },
  "include": ["src"]
}
